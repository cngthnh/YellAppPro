<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RadioGroup
        android:id="@+id/incomeCategoryGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rbSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salary"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_salary"
            android:drawablePadding="20dp"
            android:buttonTint="@color/blue"
            android:drawableTint="@color/blue"/>
        <RadioButton
            android:id="@+id/rbSavings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/savings"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_savings"
            android:drawablePadding="20dp"
            android:drawableTint="@color/blue"
            android:buttonTint="@color/blue"/>
        <RadioButton
            android:id="@+id/rbInterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/interest"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_interest"
            android:drawablePadding="20dp"
            android:drawableTint="@color/blue"
            android:buttonTint="@color/blue"/>
        <RadioButton
            android:id="@+id/rbDealing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dealing"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_dealing"
            android:drawablePadding="20dp"
            android:drawableTint="@color/blue"
            android:buttonTint="@color/blue"/>
    </RadioGroup>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:icon="@drawable/ic_save"
        app:iconGravity="textStart"
        app:cornerRadius="20dp"
        android:text="LÆ°u"/>
</androidx.appcompat.widget.LinearLayoutCompat>