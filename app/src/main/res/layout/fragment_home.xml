<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:backgroundTint="@color/yellow_primary"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="50dp"
        app:contentPaddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Hi,"
                android:textColor="@color/dark_yellow"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/notification_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_notifications"
                    app:tint="@color/dark_yellow"
                    android:background="?selectableItemBackgroundBorderless"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/avatarImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sample_avatar" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/highlightCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="85dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="90dp"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_stopwatch"
                android:layout_margin="20dp"
                app:tint="?titleTextColor"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="15dp"
                    android:text="Còn 3 ngày 2 giờ nữa">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?titleTextColor"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:text="Thiết kế UI Prototype">

                </TextView>
            </LinearLayout>
            <ImageButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_check_circle_line"
                app:tint="?iconTint"
                android:background="?selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/highlightCard">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="BẢNG CÔNG VIỆC"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/orange"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewAllDashboardsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="?titleTextColor"
                    android:text="Xem tất cả"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dashboardPreviewList"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="SỔ TAY CHI TIÊU"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/orange"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewAllBudgetsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="?titleTextColor"
                    android:text="Xem tất cả"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/budgetPreView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>