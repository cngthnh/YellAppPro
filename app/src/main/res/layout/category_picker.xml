<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rbEating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ăn uống"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_pizza"
            android:drawablePadding="20dp"
            android:buttonTint="@color/orange"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rbTravel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Du lịch"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_plane"
            android:drawablePadding="20dp"
            android:buttonTint="@color/orange"/>
        <RadioButton
            android:id="@+id/rbBuying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua sắm"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_basket"
            android:drawablePadding="20dp"
            android:buttonTint="@color/orange"/>
        <RadioButton
            android:id="@+id/rbCasual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinh hoạt gia đình"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_home_line"
            android:drawablePadding="20dp"
            android:buttonTint="@color/orange"/>
        <RadioButton
            android:id="@+id/rbHangout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hangout"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_coffee"
            android:drawablePadding="20dp"
            android:buttonTint="@color/orange"/>
        <RadioButton
            android:id="@+id/rbTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Di chuyển"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_car_alt"
            android:drawablePadding="20dp"
            android:buttonTint="@color/orange"/>
    </RadioGroup>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:icon="@drawable/ic_save"
        app:iconGravity="textStart"
        android:text="Lưu"/>
</androidx.appcompat.widget.LinearLayoutCompat>