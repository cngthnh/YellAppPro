<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_fragment"
    android:background="@color/white"
    android:scrollbars="vertical"
    android:clickable="true"
    android:focusable="true"
    tools:context="DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/cover_top"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/cover" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingStart="12dp">

                    <ImageView
                        android:id="@+id/back_dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/edit_db"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic__edit"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/complete_edit_db"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"
                        app:tint="@color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/delete_in_db"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete_1"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/cancel_edit_db"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cancel"
                        android:visibility="gone"
                        app:tint="@color/white" />
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

        <EditText
            android:id="@+id/edt_name_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:fontFamily="@font/roboto_bold"
            android:inputType="textMultiLine|textNoSuggestions"
            android:text="Đồ án CNPM"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/coop_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành viên"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:id="@+id/edit_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:background="@drawable/bg_item_user"
                    android:fontFamily="@font/roboto_light"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:text="Nhãn"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/label_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_cover_item_dashboard"
                android:text="Môn học"
                android:fontFamily="@font/roboto_regular"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Mô tả"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22dp"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="15dp">
                    <EditText
                        android:focusable="false"
                        android:id="@+id/tv_description_db"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="60dp"
                        android:hint="Thêm mô tả"
                        android:text=""
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:padding="0dp"
                        android:layout_margin="0dp"
                        android:textSize="18sp"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine|textNoSuggestions"
                        />
                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edt_description_db"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Thêm mô tả"
                        android:text=""
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:padding="0dp"
                        android:layout_margin="0dp"
                        android:textSize="18sp"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine|textNoSuggestions"
                        />
                </FrameLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Công việc"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="22dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_add"
                app:elevation="1dp"
                app:backgroundTint="@color/yellow_primary"
                app:layout_anchorGravity="bottom|center"
                app:maxImageSize="30dp"
                app:tint="@color/black"
                />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>