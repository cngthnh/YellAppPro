<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/back_account"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/ic_back"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_marginRight="10dp"
            app:tint="?titleTextColor"
            android:layout_marginStart="15dp"
            android:background="?selectableItemBackgroundBorderless"
            />
        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Tài khoản"
            android:textColor="?titleTextColor"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="50dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/avatarImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fullNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textStyle="bold"
                android:textColor="?titleTextColor"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\@nguyenvana"
                android:textStyle="normal"
                android:textColor="?titleTextColor"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/accountInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:contentPadding="15dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="?editTextBackground"
        app:cardElevation="0dp"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_account"
                app:tint="?titleTextColor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:textColor="?titleTextColor"
                android:textSize="17dp"/>
            <ImageView
                android:src="@drawable/ic_back"
                android:rotationY="180"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="?titleTextColor"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:contentPadding="15dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="?editTextBackground"
        app:cardElevation="0dp"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_settings"
                app:tint="?titleTextColor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:textColor="?titleTextColor"
                android:textSize="17dp"/>
            <ImageView
                android:src="@drawable/ic_back"
                android:rotationY="180"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="?titleTextColor"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/faqBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:contentPadding="15dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="?editTextBackground"
        app:cardElevation="0dp"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_question"
                app:tint="?titleTextColor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:textColor="?titleTextColor"
                android:textSize="17dp"/>
            <ImageView
                android:src="@drawable/ic_back"
                android:rotationY="180"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="?titleTextColor"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow_primary"
        android:textColor="@color/dark_yellow"
        android:text="Đăng xuất"/>

</LinearLayout>